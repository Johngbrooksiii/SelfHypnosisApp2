<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HypnosisApp.UI.ViewModels"
             xmlns:models="clr-namespace:HypnosisApp.Core.Models;assembly=HypnosisApp.Core"
             x:Class="HypnosisApp.UI.Views.MainPage"
             x:DataType="vm:MainViewModel"
             Title="Self Hypnosis">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label Text="Self Hypnosis Sessions"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label Text="Select a session to begin"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="Gray" />
        </VerticalStackLayout>

        <!-- Sessions List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">
                
                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                 IsVisible="{Binding IsLoading}"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center" />

                <!-- Error Message -->
                <Label Text="{Binding ErrorMessage}"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                       TextColor="Red"
                       HorizontalOptions="Center" />

                <!-- Sessions Collection -->
                <CollectionView ItemsSource="{Binding Sessions}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:SessionTemplate">
                            <Frame Padding="15" Margin="0,0,0,10" CornerRadius="10" HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=SelectSessionCommand}"
                                                        CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="{Binding Title}"
                                           FontSize="20"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding Description}"
                                           FontSize="14"
                                           TextColor="Gray" />
                                    <Label Text="{Binding Stages.Count, StringFormat='{0} stages'}"
                                           FontSize="12"
                                           TextColor="DarkGray" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Buttons -->
        <HorizontalStackLayout Grid.Row="2" Spacing="10" HorizontalOptions="Center" Margin="0,20,0,0">
            <Button Text="Refresh Sessions"
                    Command="{Binding LoadSessionsCommand}"
                    WidthRequest="150" />
            <Button Text="View History"
                    Command="{Binding ViewHistoryCommand}"
                    WidthRequest="150" />
        </HorizontalStackLayout>
    </Grid>

</ContentPage>
